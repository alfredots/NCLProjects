<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- Generated by NCL Eclipse -->
<ncl id="test" xmlns="http://www.ncl.org.br/NCL3.0/EDTVProfile">
	<head>
		<!-- posição no espaço onde as midias irão aparecer-->
		<regionBase>
			<!--define as dimensões do dispositivos -->
			<region id="principal" left="0" top="0" width="100%" 
			height="100%">
				<!--define a região onde a midia será exibida -->
				<!--referente ao video um -->
				<region id="centro" left="0" top="0" 
				width="55%" height="55%" zIndex="2" />
				<!--referente a botao -->
				<region id="rgbotao" left="0" top="60%" 
				width="10%" height="10%" zIndex="2" />
				
				<!--referente a capa -->
				<region id="rgcapa" left="60%" top="5%"
				width="40%" height="40%" zIndex="2"/>
					
				<!--referente a interatividade -->
				<region id="rgint" left="40%" top="58%"
				width="40%" height="40%" zIndex="2"/>	
				
				<!--referente ao fundo-->
				<region id="fundo" left="0" top="0" width="100%" height="100%" zIndex="1"/>
				
			</region>
		</regionBase>
		
		<descriptorBase>
			<!--esse descritor liga uma midia a uma região-->
			<descriptor id="aberturaCentro" region="centro"/>
			
			<descriptor id="desc_botao" region="rgbotao" explicitDur="5s"/>
			<descriptor id="desc_capa" region="rgcapa"/>
			<descriptor id="desc_capa2" region="rgcapa"/>
			
			<descriptor id="video_1" region="centro"/>
			<descriptor id="desc_video2" region="centro"/>
			
			<descriptor id="imgfundo" region="fundo"/>
			
			<descriptor id="desc_int" region="rgint" />
		</descriptorBase>
		
		<connectorBase>
			<!--Fazem a conexão entre as midias para que haja sincronismo-->
			<importBase documentURI="Cbase.ncl" alias="ConB"/>
			
			<causalConnector id="onBeginStartDelay">
				<connectorParam name="deley"/>
				<simpleCondition role="onBegin"/>
				<simpleAction role="start" delay="$deley"/>
			</causalConnector>
			
			<causalConnector id="onEndStopDelay">
				<simpleCondition role="onEnd" />
				<simpleAction role="stop" delay="2s" />
			</causalConnector>
						
		</connectorBase>
			
		
	</head>

	<body>
		<!--definem quais midias será apresentada inicialmente -->
		<port id="inicio" component="video_abertura"/>
		
		<!--inserção de uma midia e seu descriptor -->
		<media id="video_abertura" src="media/abertura.mpg"
		descriptor="aberturaCentro" />
		
		<media id="botao_azul" src="media/botao1.png" descriptor="desc_botao"/>
		
		<media id="california" src="media/video.mp4" descriptor="video_1">
			<area id="interagir" begin="1s" end="10s"/>
			<area id="interagir2" begin="74s" end="85s"/>
		</media>
		
		<media id="media_int" src="media/int_california1.jpg" descriptor="desc_int"/>
		<media id="media_int2" src="media/int_california2.jpg" descriptor="desc_int"/>
			
		<media id="artangels" src="media/capa_artangels.png" descriptor="desc_capa"/>
		
		<media id="rather_be" src="media/video2.mp4" descriptor="desc_video2"/>
		<media id="cleanbandit" src="media/capa_cleanbandit.png" descriptor="desc_capa2"/>
		
		<media id="fundo_img" src="media/fundo.png" descriptor="imgfundo"/>
		<!--faz o elo entre as duas midias -->
		<!--Inicio -->
		
		<link xconnector="ConB#onBeginStop">
			<bind role="onBegin" component="california"/>
			<bind role="stop" component="video_abertura"/>
		</link>
		
		<!--California -->
		<link xconnector="ConB#onEndStart">
			<bind role="onEnd" component="video_abertura"/>
			<bind role="start" component="california"/>
		</link>
		
		<link xconnector="ConB#onBeginStart">
			<bind role="onBegin" component="california"/>
			<bind role="start" component="artangels"/>
		</link>
		
		<link xconnector="ConB#onBeginStart">
			<bind role="onBegin" component="california"/>
			<bind role="start" component="botao_azul"/>
		</link>
		
		
		<link xconnector="ConB#onBeginStop">
			<bind role="onBegin" component="rather_be"/>
			<bind role="stop" component="california"/>
		</link>
		
		<link xconnector="ConB#onBeginStop">
			<bind role="onBegin" component="rather_be"/>
			<bind role="stop" component="artangels"/>
		</link>
		<!--interação 1 -->
		<link xconnector="ConB#onBeginStart">
			<bind role="onBegin" component="california" interface="interagir"/>
			<bind role="start" component="media_int">
				
			</bind>
		</link>
		
		<link xconnector="ConB#onEndStop">
			<bind role="onEnd" component="california" interface="interagir"/>
			<bind role="stop" component="media_int">
				
			</bind>
		</link>
		
		<!--interação 2 -->
		<link xconnector="ConB#onBeginStart">
			<bind role="onBegin" component="california" interface="interagir2"/>
			<bind role="start" component="media_int2">
				
			</bind>
		</link>
		
		<link xconnector="ConB#onEndStop">
			<bind role="onEnd" component="california" interface="interagir2"/>
			<bind role="stop" component="media_int2">
				
			</bind>
		</link>
		
		<!--Rather Be-->
		
		<link xconnector="ConB#onKeySelectionStart">
			<bind role="onSelection" component="botao_azul">
				<bindParam name="tecla" value="1"/>
			</bind>
			<bind role="start" component="rather_be"/>	
		</link>
		
		<link xconnector="ConB#onBeginStop">
			<bind role="onBegin" component="rather_be"/>
			<bind role="stop" component="botao_azul">
				
			</bind>
		</link>
		
		<link xconnector="ConB#onBeginStart">
			<bind role="onBegin" component="video_abertura"/>
			<bind role="start" component="fundo_img"/>
		</link>
		
		<link xconnector="ConB#onBeginStart">
			<bind role="onBegin" component="rather_be"/>
			<bind role="start" component="cleanbandit"/>
		</link>	
	</body>
</ncl>